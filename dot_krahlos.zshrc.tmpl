# Aliases
alias ls="ls -hFG"
alias l="ls -lF"
alias ll="ls -alF"
alias lt="ls -ltrF"
alias lls="ls -alSrF"
alias llt="ls -altrF"

alias cdtmp=cd "$(mktemp -d)"

{{ if eq .chezmoi.os "darwin" }}
# Add sys link to iCloud
if [ ! -L "$HOME/.icloud" ]; then
  ln -s "$HOME/Library/Mobile Documents" "$HOME/.icloud"
fi

# Default
export PATH="/usr/bin:/bin:/usr/sbin:/sbin:/Library/Apple/usr/bin"

# Add custom, local installations to PATH
export PATH="/usr/local/bin:/usr/local/sbin:$HOME/.local/bin${PATH+:$PATH}"

# Homebrew
export HOMEBREW_PREFIX="/opt/homebrew";
export HOMEBREW_CELLAR="/opt/homebrew/Cellar";
export HOMEBREW_REPOSITORY="/opt/homebrew";
export PATH="/opt/homebrew/bin:/opt/homebrew/sbin${PATH+:$PATH}";
export MANPATH="/opt/homebrew/share/man${MANPATH+:$MANPATH}:";
export INFOPATH="/opt/homebrew/share/info:${INFOPATH:-}";

# Flutter
export PATH="$PATH:/usr/local/bin/flutter/bin"
{{ end }}

# Colorize the ls output
alias ls="ls -ph --color=auto"
# export LS_COLORS='di=34:ln=35:so=32:pi=33:ex=1;40:bd=34;40:cd=34;40:su=0;40:sg=0;40:tw=0;40:ow=0;40;'

# Colorize grep
if echo hello | grep --color=auto l > /dev/null 2>&1; then
  alias grep='grep --color=always'
fi
